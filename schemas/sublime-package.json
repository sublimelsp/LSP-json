{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sublime://sublime-package",
  "title": "JSON schema for Sublime Text Package",
  "allowComments": true,
  "allowTrailingCommas": true,
  "type": "object",
  "properties": {
    "contributions": {
      "type": "object",
      "markdownDescription": "A type of resources that package contributes to Sublime Text",
      "additionalProperties": false,
      "uniqueItems": true,
      "properties": {
        "settings": {
          "markdownDescription": "Contributed editor settings",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "file_patterns": {
                "markdownDescription": "A list of file name patterns to match given configuration file",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "schema": {
                "type": "object",
                "$ref": "http://json-schema.org/draft-07/schema#",
                "default": {}
              }
            }
          }
        }
      }
    }
  }
}
