{
  "contributions": {
    "settings": [
      {
        "file_patterns": ["/LSP-json.sublime-settings"],
        "schema": {
          "$id": "sublime://settings/LSP-json",
          "definitions": {
            "userSchema": {
              "type": "object",
              "properties": {
                "fileMatch": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                },
                "uri": {
                  "type": "string"
                }
              },
              "required": ["fileMatch", "uri"],
              "additionalProperties": false,
              "defaultSnippets": [
                {
                  "label": "User Schema",
                  "body": {
                    "fileMatch": ["$1"],
                    "uri": "$2"
                  }
                }
              ],
            },
          },
          "allOf": [
            { "$ref": "sublime://settings/LSP-plugin-base"},
            {
              "properties": {
                "initializationOptions": {
                  "additionalProperties": false,
                  "properties": {
                    "customCapabilities": {
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "rangeFormatting": {
                          "type": "object",
                          "additionalProperties": false,
                          "properties": {
                            "editLimit": {
                              "type": "number",
                              "default": 1000
                            }
                          },
                        }
                      },
                    },
                    "provideFormatter": {
                      "type": "boolean",
                      "default": true
                    }
                  },
                },
                "settings": {
                  "properties": {
                    "json": {
                      "type": "object",
                      "properties": {
                        "format": {
                          "type": "object",
                          "properties": {
                            "enable": {
                              "type": "boolean"
                            }
                          },
                          "additionalProperties": false
                        },
                        "resultLimit": {
                          "type": "number",
                          "default": 5000
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                },
                "userSchemas": {
                  "markdownDescription": "User-defined schemas to extend default schemas with",
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/userSchema"
                  }
                }
              },
            }
          ],
        }
      },
    ]
  }
}
